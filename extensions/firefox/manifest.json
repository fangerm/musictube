{
    "manifest_version": 2,
    "name": "MusicTube",
    "version": "0.5",

    "description": "Adds extra functionality to MusicTube.",

    "icons": {
        "48": "icon.png"
    },

    "permissions": [
        "tabs"
    ],

    "commands": {
        "play-pause": {
            "suggested_key": {
                "default": "F4"
            },
            "description": "Play/Pause the player."
        },
        "prev": {
            "suggested_key": {
                "default": "F1"
            },
            "description": "Play the previous track."
        },
        "next": {
            "suggested_key": {
                "default": "F2"
            },
            "description": "Play the next track."
        }
    },

    "background": {
        "scripts": ["background.js"]
    },
    
    "content_scripts": [{
        "matches": [
            "*://mtube.dynu.net/*"
        ],
        "js": [
            "content-mtube.js"
        ]
    }]
}